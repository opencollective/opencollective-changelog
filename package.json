{
  "name": "opencollective-changelog",
  "version": "1.0.0",
  "description": "Track changes on opencollective frontend and api",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --exec babel-node -- src/server/index.js",
    "build": "npm run build:clean && npm run build:server && npm run build:next",
    "build:clean": "rimraf dist src/.next",
    "build:server": "babel --copy-files ./src --out-dir ./dist --ignore src/pages/*,src/components/*",
    "build:next": "next build dist",
    "changelog:update": "babel-node -- src/scripts/update_changelog.js"
  },
  "keywords": [
    "opencollect"
  ],
  "author": "Oluwaseun Omoyajowo",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^16.33.1",
    "@zeit/next-css": "^1.0.1",
    "cross-fetch": "^3.0.4",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "edit-json-file": "^1.3.1",
    "express": "^4.17.1",
    "jsonfile": "^5.0.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "next": "^9.1.1",
    "next-routes": "^1.4.2",
    "prop-types": "^15.7.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/node": "^7.6.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-lodash": "^3.3.4",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-opencollective": "^2.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-react": "^7.16.0",
    "file-loader": "^4.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
